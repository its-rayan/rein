{
  // Use Prettier as the default formatter and format files on save
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  // ESLint settings
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "editor.codeActionsOnSave": {
    // Fix all fixable linting issues on save
    "source.fixAll": "always",
    // Organize imports and remove unused imports on save
    "source.organizeImports": "always"
  }
}
